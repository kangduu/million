{
  "compilerOptions": {
    "target": "ES6", // 编译为 ES6 语法（您也可以选择其他版本）
    "module": "commonjs", // 使用 CommonJS 模块系统（Node.js 默认）
    "moduleResolution": "node",
    "outDir": "./dist", // 输出编译后的文件目录
    "rootDir": "./src", // 输入的 TypeScript 文件的根目录
    "strict": true, // 启用严格模式，增强类型检查
    "esModuleInterop": true, // 启用 ES 模块兼容性
    "skipLibCheck": true, // 跳过库文件的类型检查
    "forceConsistentCasingInFileNames": true,
    // "baseUrl": ".",
    // "paths": {
    //   "*": ["src/*"]
    // }
  },
  "include": ["src/**/*.ts"], // 包含 src 目录下的所有 TypeScript 文件
  "exclude": ["node_modules"] // 排除 node_modules 目录
}
